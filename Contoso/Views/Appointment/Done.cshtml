@model Contoso.Models.AppointmentModel
@{
    ViewBag.Title = "Done";
}

<p>Done!</p>

<div class="row">
    <div class="col-sm-4 col-lg-8">
        <div class="panel panel-info">
            @using (Html.BeginForm("Index", "ConfirmBooking", FormMethod.Post, new { role = "form" }))
            {
                if (ViewBag.availableSlots != null)
                {
                    foreach (var user in (Dictionary<TimeSpan, string>)ViewBag.availableSlots)
                    {
                        <table>
                            <tr>
                                <td>
                                    @user.Key
                                </td>
                                <td>
                                    @if (user.Value == "Available")
                                    {

                                        <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#bookSlot">Book Now!</button>
                                        <div class="modal fade" id="bookSlot" role="dialog">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Modal Header</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.UserCustomer.FirstName, new { @class = "col-md-2 control-label" })
                                                            <div class="col-md-10">
                                                                @Html.TextBoxFor(m => m.UserCustomer.FirstName, new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.UserCustomer.LastName, new { @class = "col-md-2 control-label" })
                                                            <div class="col-md-10">
                                                                @Html.TextBoxFor(m => m.UserCustomer.FirstName, new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.UserCustomer.Age, new { @class = "col-md-2 control-label" })
                                                            <div class="col-md-10">
                                                                @Html.TextBoxFor(m => m.UserCustomer.Age, new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.UserCustomer.PhoneNumber, new { @class = "col-md-2 control-label" })
                                                            <div class="col-md-10">
                                                                @Html.TextBoxFor(m => m.UserCustomer.PhoneNumber, new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(m => m.UserCustomer.Email, new { @class = "col-md-2 control-label" })
                                                            <div class="col-md-10">
                                                                @Html.TextBoxFor(m => m.UserCustomer.Email, new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                        @Html.ActionLink("Confirm Booking!", "Done", new { role = "form" })
                                                        <!--<input type="button" value="Create" onclick="location.href='//Url.Action("Index", "ConfirmBooking", FormMethod.Post)'" /> -->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                    }
                                    else
                                    {
                                        <p>@user.Value</p>
                                    }
                                </td>
                            </tr>
                        </table>
                    }
                }
            }
        </div>
    </div>
</div>





